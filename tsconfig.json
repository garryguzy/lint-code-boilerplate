{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "module": "CommonJS",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    // "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "src/*"
  ]
}